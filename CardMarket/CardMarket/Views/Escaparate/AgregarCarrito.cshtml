@model CardMarket.Models.Producto
@{
    ViewData["Title"] = "AgregarCarrito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<body clasS="bg-dark text-light">
<h1>Añadir Carrito</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <div>
                @{
                    var ImagenDefault = "imangen-no-disponible.jpg";
                    if (Model.Imagen != null)
                    {
                        ImagenDefault = Model.Imagen;
                    }

                }
                <img src="~/imagenes/@ImagenDefault" style="width:250px; height:250px;" alt="No funciona" asp-append-version="true" />
            </div>
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Texto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Texto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:c}", Model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Descripcion)
        </dd>

        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            <br />
            <form asp-action="AgregarCarrito">
                <div class="form-group" hidden>
                    @Html.DisplayFor(model=>model.Id)
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar al carrito" class="btn btn-primary"/>
                    <input type="submit" value="Volver" class="btn btn-primary" asp-action="Index" />
                </div>
            </form>
        </dd>
    </dl>
</div>

<br />

</body>.